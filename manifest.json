{
    "name": "Typeflex",
    "version": "1.0.0",
    "description": "text replacer",
    "manifest_version": 3,
    "author": "Aryan Verma",
    "action":{
        "default_popup": "index.html"
    },

    "permissions": ["activeTab"],

    "icons": {
        "16": "src-images/logo-16.png",
        "32": "src-images/logo-32.png",
        "48": "src-images/logo-48.png",
        "128": "src-images/logo-128.png"
    },

    "content_scripts":[
        {
            "matches": ["<all_urls>"], 
            "js" : ["text-replacer.js"]
        }
    ]

}